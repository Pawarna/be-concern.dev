generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
}

model Portofolio {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  imageUrl    String
  tags        Tag[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Tag {
  id          Int          @id @default(autoincrement())
  name        String       @unique
  portofolios Portofolio[]
}

model Admin {
  id       Int    @id @default(autoincrement())
  username String @unique
  password String
  artikels Artikel[]
}

enum StatusArtikel {
  DRAFT
  PUBLISHED
}

model Artikel {
  id    Int    @id @default(autoincrement())
  title String
  slug  String @unique
  content Json
  thumbnail String
  status StatusArtikel
  author Admin  @relation(fields: [authorId], references: [id])
  authorId Int
  category Category? @relation(fields: [categoryId], references: [id])
  categoryId Int?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Category {
  id    Int    @id @default(autoincrement())
  name  String @unique
  artikels Artikel[]
}
